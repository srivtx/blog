---
const { frontmatter } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{frontmatter.title}</title>
  </head>
  <body>
    <nav>
      <a href="/">Home</a>
      <a href="/blog">Blog</a>
    </nav>
    <main>
      <article>
        <h1>{frontmatter.title}</h1>
        <p>Published on: {new Date(frontmatter.date).toLocaleDateString()}</p>
        <slot />
      </article>
    </main>
  </body>
</html>

<style>
  body {
    font-family: system-ui, sans-serif;
    margin: 0;
    padding: 20px;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  nav {
    margin-bottom: 2rem;
  }

  nav a {
    margin-right: 1rem;
    color: #333;
    text-decoration: none;
  }

  nav a:hover {
    text-decoration: underline;
  }

  h1 {
    color: #333;
  }
</style>