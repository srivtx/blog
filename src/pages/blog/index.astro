---
const posts = await Astro.glob('./*.md');
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Blog</title>
  </head>
  <body>
    <nav>
      <a href="/">Home</a>
      <a href="/blog">Blog</a>
    </nav>
    <main>
      <h1>Blog Posts</h1>
      <ul>
        {posts.map(post => (
          <li>
            <a href={post.url}>
              {post.frontmatter.title}
            </a>
            <time>
              {new Date(post.frontmatter.date).toLocaleDateString()}
            </time>
          </li>
        ))}
      </ul>
    </main>
  </body>
</html>

<style>
  body {
    font-family: system-ui, sans-serif;
    margin: 0;
    padding: 20px;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  nav {
    margin-bottom: 2rem;
  }

  nav a {
    margin-right: 1rem;
    color: #333;
    text-decoration: none;
  }

  nav a:hover {
    text-decoration: underline;
  }

  ul {
    list-style: none;
    padding: 0;
  }

  li {
    margin-bottom: 1rem;
  }

  li a {
    color: #333;
    text-decoration: none;
    font-size: 1.2rem;
  }

  li a:hover {
    text-decoration: underline;
  }

  time {
    display: block;
    color: #666;
    font-size: 0.9rem;
  }
</style>